@model List<Student>
@{
    ViewData["Title"] = "Student List";
}
<div class="container mt-5 d-flex justify-content-center flex-wrap">
    @foreach(var Student in Model){
    <div class="card mb-2 me-2 text-center shadow-sm" style="width: 18rem;">
        <div class="card-body">
            @Html.HiddenFor(model => Student.Id)
            <img asp-append-version="true" src="@Student.Image" alt="baby image" width="100" height="100" class="circle thumbnail">
            <h5 class="card-title">@Student.Name</h5>
            <p class="card-text">Age: @Student.Age</p>
            <a asp-action="Edit" asp-controller="Home" class="btn btn-primary" asp-route-id="@Student.Id">Edit</a>
            <a asp-action="Delete" asp-controller="Home" class="btn btn-danger" asp-route-id="@Student.Id">Delete</a>
        </div>
    </div>
    }
</div>
