@model Student
@{
    ViewData["Title"] = "Student Details";
    var st = Model;
}
<h2 class="text-center mb-4">Student Details</h2>
<div class="container">
    <div class="card border-primary">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Full Name:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@st.Name</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Date of Birth:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@st.DateOfBirth.ToShortDateString()</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Gender:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@st.Gender</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Address:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@st.Address</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Branch:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@st.Branch</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Hobbies:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@string.Join(", ", st.Hobbies)</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">
                    Skills:
                </div>
                <div class="col-md-8">
                    <p class="mb-0">@string.Join(", ", st.Skills)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="List" class="btn btn-primary">Back to List</a>
    </div>
</div>
